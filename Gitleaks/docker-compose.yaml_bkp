version: "3.8"

services:
  gitleaks:
    image: zricethezav/gitleaks:latest   # Official Gitleaks image
    container_name: gitleaks
    working_dir: /scan
    volumes:
      - ./repo:/scan     # ðŸ‘ˆ mount the repo you want to scan
      - ./reports:/reports   # ðŸ‘ˆ save reports here
    entrypoint: [ "gitleaks" ]
    command: [ "detect", "--source=.", "--report-path=/reports/gitleaks_report.json", "--verbose" ]

